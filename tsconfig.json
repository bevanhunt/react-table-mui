{
  "compilerOptions": {
    "target": "esnext",
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": false,
    "forceConsistentCasingInFileNames": true,
    "allowSyntheticDefaultImports": true,
    "noEmit": false,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
  },
  "include": [
    "index.ts",
    "src/*.ts",
    "src/*.tsx",
    "types/*.ts",
    "utils/*.ts",
    "utils/*.tsx"
  ],
  "exclude": [
    "dist",
    "rollup.config.js",
    "node_modules"
  ],
}
